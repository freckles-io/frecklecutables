#! /usr/bin/env frecklecute

doc:
  short_help: executes an ansible task or role
  help: |
    Executes a single ansible task or role.

args:
  task_name:
    alias: task-name
    required: true
    doc:
      help: the name of the task or role
    click:
      option:
        metavar: "TASK_OR_ROLE"
  become_root:
    alias: become
    required: false
    default: false
    doc:
      help: whether to become root for this task or not
    click:
      option:
        is_flag: true
  vars_file:
    alias: vars
    required: false
    doc:
      help: a file or json string containing vars for the specified task/role
    click:
      option:
        multiple: false
        type: freckles.utils.VarsTypeJson

    # use_value: true
tasks:
  - meta:
      name: "{{:: task_name ::}}"
      become: "{{:: become_root ::}}"
    vars:
      {{:: vars_file | to_yaml ::}}
